{
  "name": "sample",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
  
    "start": "npm run start-fr",
    "start-nl": "ng serve --configuration=nl",
    "start-fr": "ng serve --configuration=fr",
    "start-en": "ng serve --configuration=en",
  
    "build": "npm run i18n && npm run translationio-sync && npm run build-app",

    "i18n": "npm run i18n-templates && npm run i18n-merge",
    "i18n-templates": "ng xi18n --output-path src/locale",
    "i18n-merge": "ng run sample:xliffmerge",

    "translationio-init": "tio --init --options=tio.config.json",
    "translationio-sync": "tio --sync --options=tio.config.json",
    "translationio-sync-readonly": "tio --sync --readonly --options=tio.config.json",
    "translationio-sync-purge": "tio --sync --purge --options=tio.config.json",
    
    "build-app": "npm run build-nl && npm run build-fr && npm run build-en",
    "build-nl": "ng build --configuration=production-nl",
    "build-fr": "ng build --configuration=production-fr",
    "build-en": "ng build --configuration=production-en"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~9.1.11",
    "@angular/common": "~9.1.11",
    "@angular/compiler": "~9.1.11",
    "@angular/core": "~9.1.11",
    "@angular/forms": "~9.1.11",
    "@angular/localize": "^9.1.12",
    "@angular/platform-browser": "~9.1.11",
    "@angular/platform-browser-dynamic": "~9.1.11",
    "@angular/router": "~9.1.11",
    "@ngx-i18nsupport/tooling": "^8.0.3",
    "rxjs": "~6.5.4",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.901.10",
    "@angular/cli": "~9.1.10",
    "@angular/compiler-cli": "~9.1.11",
    "@angular/language-service": "9.1.12",
    "@ngx-i18nsupport/ngx-i18nsupport": "^1.1.6",
    "@types/node": "^12.11.1",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "codelyzer": "^5.1.2",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.0",
    "karma-jasmine": "~3.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~3.8.3"
  }
}
